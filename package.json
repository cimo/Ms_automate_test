{
    "name": "ms_automate_test",
    "version": "1.0.0",
    "description": "Microservice automate test.",
    "author": "cimo",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/cimo/Ms_automate_test.git"
    },
    "scripts": {
        "preinstall": "npx npm-force-resolutions",
        "remove_dist": "node -e \"const fs = require('fs'); try{ fs.rmdirSync('./dist/', { recursive: true }) } catch{}; process.exit(0);\"",
        "remove_public_js": "node -e \"const fs = require('fs'); try{ fs.rmdirSync('./public/js/', { recursive: true }) } catch{}; process.exit(0);\"",
        "sass": "sass ./src/style/main.scss ./public/style/main.css",
        "check": "TIMING=1 eslint --no-cache --config eslint.config.js || true",
        "build_tsc": "npm run remove_dist && tsc --build tsconfig.tsc.json && npm run check && npm audit",
        "build_app": "npm run remove_public_js && npm run sass && webpack --config webpack.build.js && npm audit",
        "build": "npm run build_tsc && npm run build_app",
        "execute": "nodemon --config nodemon.json",
        "execute_ui": "npx playwright test --ui --config=./src/playwright.config.ts"
    },
    "dependencies": {
        "@cimo/authentication": "1.1.19",
        "@cimo/pid": "1.0.12",
        "@cimo/websocket": "1.2.41",
        "@cimo/jsmvcfw": "1.1.8",
        "@cimo/environment": "1.0.11",
        "express": "4.21.2",
        "express-rate-limit": "7.5.0",
        "cookie-parser": "1.4.7",
        "cors": "2.8.5",
        "@playwright/test": "latest",
        "material-components-web": "14.0.0"
    },
    "devDependencies": {
        "typescript": "5.7.2",
        "sass": "1.83.0",
        "eslint": "9.31.0",
        "@typescript-eslint/parser": "8.24.1",
        "@typescript-eslint/eslint-plugin": "8.24.1",
        "eslint-plugin-prettier": "5.2.1",
        "globals": "15.13.0",
        "prettier": "3.4.2",
        "webpack": "5.97.1",
        "webpack-cli": "5.1.4",
        "terser-webpack-plugin": "5.3.11",
        "html-webpack-plugin": "5.6.3",
        "eslint-webpack-plugin": "4.2.0",
        "compression-webpack-plugin": "11.1.0",
        "ts-loader": "9.5.1",
        "esbuild-loader": "4.3.0",
        "nodemon": "3.1.9",
        "@types/node": "22.10.2",
        "@types/express": "5.0.0",
        "@types/cookie-parser": "1.4.8",
        "@types/cors": "2.8.17"
    },
    "resolutions": {
        "node-fetch": "2.6.7",
        "**/node-fetch": "2.6.7",
        "crypto-js": "4.2.0",
        "**/crypto-js": "4.2.0",
        "path-to-regexp": "0.1.12",
        "**/path-to-regexp": "0.1.12",
        "send": "0.19.0",
        "**/send": "0.19.0",
        "serve-static": "1.16.0",
        "**/serve-static": "1.16.0",
        "body-parser": "1.20.3",
        "**/body-parser": "1.20.3",
        "cookie": "0.7.0",
        "**/cookie": "0.7.0",
        "brace-expansion": "2.0.2",
        "**/brace-expansion": "2.0.2"
    }
}
