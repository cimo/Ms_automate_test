{
    "name": "ms_automate_test",
    "version": "1.0.0",
    "description": "Microservice automate frontend test.",
    "author": "cimo",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/cimo/Ms_automate_test.git"
    },
    "scripts": {
        "preinstall": "([ ! -f package-lock.json ] && npm install --package-lock-only --ignore-scripts --no-audit); npx npm-force-resolutions",
        "sass": "sass --watch ./src/style/main.scss ./public/style/main.css",
        "check": "eslint --fix",
        "remove_dist": "node -e \"const fs = require('fs'); try{ fs.rmdirSync('./dist/', { recursive: true }) } catch{}; process.exit(0);\"",
        "remove_public": "node -e \"const fs = require('fs'); try{ fs.rmdirSync('./public/js/', { recursive: true }) } catch{}; process.exit(0);\"",
        "build": "npm run remove_dist && npm run remove_public && npm run check && tsc --build tsconfig.build.json && webpack --config webpack.build.js",
        "execute": "nodemon --config nodemon.json"
    },
    "dependencies": {
        "@cimo/authentication": "1.0.1",
        "@cimo/request": "1.2.2",
        "@cimo/form-data_parser": "1.1.13",
        "@cimo/websocket": "1.0.16",
        "cookie-parser": "1.4.6",
        "cors": "2.8.5",
        "express": "4.18.1",
        "twing": "6.0.0-alpha.1",
        "playwright": "1.39.0",
        "@playwright/test": "1.39.0",
        "material-components-web": "14.0.0"
    },
    "devDependencies": {
        "@types/node": "18.14.4",
        "@types/express": "4.17.17",
        "@types/cookie-parser": "1.4.3",
        "@types/cors": "2.8.13",
        "@typescript-eslint/eslint-plugin": "5.54.0",
        "@typescript-eslint/parser": "5.54.0",
        "eslint": "8.35.0",
        "eslint-plugin-prettier": "4.2.1",
        "eslint-config-prettier": "8.8.0",
        "prettier": "2.8.7",
        "prettier-plugin-twig-melody": "0.4.6",
        "typescript": "4.9.4",
        "sass": "1.57.1",
        "nodemon": "2.0.21",
        "webpack": "5.79.0",
        "webpack-cli": "5.0.1",
        "terser-webpack-plugin": "5.3.9",
        "compression-webpack-plugin": "10.0.0",
        "ts-loader": "9.4.2",
        "dotenv": "16.0.3"
    },
    "resolutions": {
        "node-fetch": "2.6.7",
        "**/node-fetch": "2.6.7"
    }
}
